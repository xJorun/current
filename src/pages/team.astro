---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import WhitePetals from '../components/WhitePetals.astro';
import Cursor from '../components/Cursor.astro';
import Footer from '../components/Footer.astro';
import DataStream from '../components/DataStream.astro';
import QuantumButton from '../components/QuantumButton.astro';

const streamItems = [
    'TEAM: Legendary visionaries working across infinite dimensions',
    'CULTURE: Innovation, Excellence, Passion, Collaboration',
    'MISSION: Redefining the boundaries of digital reality',
    'STATUS: Continuously pushing the impossible to inevitable'
];
---

<BaseLayout title="Team - Current Studios Visionaries" description="Meet the visionaries behind Current Studios. Our team of developers, designers, and creators who are redefining gaming experiences.">
    <Cursor />
    <Navigation currentPage="team" />
    <WhitePetals />
    <div class="subtle-grid"></div>

    <section class="staff-cosmos">
        <div class="staff-hero-content">
            <h1 class="staff-title scroll-reveal">VISIONARIES</h1>
            <p class="staff-subtitle scroll-reveal">The minds behind the revolution in gaming experiences</p>
        </div>
    </section>

    <section class="leadership-section">
        <div class="leadership-container">
            <div class="section-header scroll-reveal">
                <h2 class="section-title holographic">MASTERMIND</h2>
                <p class="section-subtitle">The architect of our gaming universe</p>
            </div>

            <div class="leader-showcase scroll-reveal-left">
                <div class="leader-avatar-container">
                    <div class="leader-avatar-frame">
                        <img src="https://res.cloudinary.com/dcyvxzhnl/image/upload/v1748192434/image_2025-05-25_130032546_vtkcbp.png" alt="Chrollo - Founder">
                        <div class="leader-avatar-overlay"></div>
                    </div>
                    <div class="leader-orbital-rings">
                        <div class="orbital-ring"></div>
                        <div class="orbital-ring"></div>
                        <div class="orbital-ring"></div>
                    </div>
                    <div class="leader-energy-field"></div>
                </div>
                
                <div class="leader-info-panel">
                    <div class="leader-badge">
                        <span>LEGENDARY FOUNDER</span>
                    </div>
                    <h2 class="leader-name">CHROLLO</h2>
                    <div class="leader-title">Founder & Lead Developer</div>
                    <p class="leader-description">The visionary behind Current Studios, Chrollo has revolutionized Roblox gaming with titles that push the boundaries of what's possible. With over 550K YouTube subscribers and 7.7M+ studio members, his influence extends far beyond code.</p>
                    <div class="leader-achievements">
                        <div class="achievement-crystal">
                            <span class="achievement-number" id="hero-members">7.7M+</span>
                            <span class="achievement-label">Studio Members</span>
                        </div>
                        <div class="achievement-crystal">
                            <span class="achievement-number">550K+</span>
                            <span class="achievement-label">YouTube Subs</span>
                        </div>
                        <div class="achievement-crystal">
                            <span class="achievement-number">âˆž</span>
                            <span class="achievement-label">Innovation</span>
                        </div>
                    </div>
                    <div class="leader-social">
                        <a href="#" class="social-crystal">
                            <svg viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
                        </a>
                        <a href="https://x.com/currentgamesrbx" class="social-crystal" target="_blank">
                            <svg viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.80l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                        </a>
                        <a href="#" class="social-crystal">
                            <svg viewBox="0 0 24 24"><path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.193.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/></svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="team-section">
        <div class="team-container">
            <div class="section-header scroll-reveal">
                <h2 class="section-title holographic">CORE ARCHITECTS</h2>
                <p class="section-subtitle">The talented individuals who bring our vision to life</p>
            </div>

            <div class="team-grid">
                <div class="team-member-crystal scroll-reveal" data-cursor="pointer">
                    <div class="member-avatar">AX</div>
                    <h3 class="member-name">ALEX</h3>
                    <div class="member-role">Lead Game Designer</div>
                    <p class="member-description">Crafting immersive gameplay experiences that keep millions of players coming back for more.</p>
                    <div class="member-skills">
                        <span class="skill-orb"><span>Game Design</span></span>
                        <span class="skill-orb"><span>Combat Systems</span></span>
                        <span class="skill-orb"><span>Balance</span></span>
                        <span class="skill-orb"><span>User Experience</span></span>
                    </div>
                </div>

                <div class="team-member-crystal scroll-reveal" data-cursor="pointer">
                    <div class="member-avatar">MK</div>
                    <h3 class="member-name">MIKA</h3>
                    <div class="member-role">Senior Developer</div>
                    <p class="member-description">Turning impossible ideas into smooth, optimized code that runs flawlessly for millions.</p>
                    <div class="member-skills">
                        <span class="skill-orb"><span>Lua Scripting</span></span>
                        <span class="skill-orb"><span>Performance</span></span>
                        <span class="skill-orb"><span>Architecture</span></span>
                        <span class="skill-orb"><span>Optimization</span></span>
                    </div>
                </div>

                <div class="team-member-crystal scroll-reveal" data-cursor="pointer">
                    <div class="member-avatar">ZN</div>
                    <h3 class="member-name">ZANE</h3>
                    <div class="member-role">UI/UX Visionary</div>
                    <p class="member-description">Creating interfaces that are not just functional, but absolutely stunning and intuitive.</p>
                    <div class="member-skills">
                        <span class="skill-orb"><span>Interface Design</span></span>
                        <span class="skill-orb"><span>User Experience</span></span>
                        <span class="skill-orb"><span>Prototyping</span></span>
                        <span class="skill-orb"><span>Animation</span></span>
                    </div>
                </div>

                <div class="team-member-crystal scroll-reveal" data-cursor="pointer">
                    <div class="member-avatar">RY</div>
                    <h3 class="member-name">RYAN</h3>
                    <div class="member-role">3D Reality Sculptor</div>
                    <p class="member-description">Bringing worlds to life with stunning 3D models and immersive environments.</p>
                    <div class="member-skills">
                        <span class="skill-orb"><span>3D Modeling</span></span>
                        <span class="skill-orb"><span>Animation</span></span>
                        <span class="skill-orb"><span>Character Design</span></span>
                        <span class="skill-orb"><span>World Building</span></span>
                    </div>
                </div>

                <div class="team-member-crystal scroll-reveal" data-cursor="pointer">
                    <div class="member-avatar">SK</div>
                    <h3 class="member-name">SAKI</h3>
                    <div class="member-role">Quality Guardian</div>
                    <p class="member-description">Ensuring every experience meets our impossibly high standards of perfection.</p>
                    <div class="member-skills">
                        <span class="skill-orb"><span>Quality Assurance</span></span>
                        <span class="skill-orb"><span>Testing</span></span>
                        <span class="skill-orb"><span>Standards</span></span>
                        <span class="skill-orb"><span>Perfection</span></span>
                    </div>
                </div>

                <div class="team-member-crystal scroll-reveal" data-cursor="pointer">
                    <div class="member-avatar">JX</div>
                    <h3 class="member-name">JAX</h3>
                    <div class="member-role">Community Architect</div>
                    <p class="member-description">Building and nurturing the incredible community that makes Current Studios special.</p>
                    <div class="member-skills">
                        <span class="skill-orb"><span>Community</span></span>
                        <span class="skill-orb"><span>Social Media</span></span>
                        <span class="skill-orb"><span>Engagement</span></span>
                        <span class="skill-orb"><span>Strategy</span></span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="culture-cosmos">
        <div class="culture-container">
            <h2 class="culture-title holographic scroll-reveal">OUR QUANTUM CULTURE</h2>
            <p class="section-subtitle scroll-reveal">The principles that guide everything we create</p>

            <div class="culture-grid">
                <div class="culture-crystal scroll-reveal" data-cursor="pointer">
                    <div class="culture-icon">ðŸš€</div>
                    <h3 class="culture-crystal-title">INNOVATION</h3>
                    <p class="culture-crystal-description">We don't follow trends, we create them. Every game pushes boundaries.</p>
                </div>

                <div class="culture-crystal scroll-reveal" data-cursor="pointer">
                    <div class="culture-icon">âš¡</div>
                    <h3 class="culture-crystal-title">EXCELLENCE</h3>
                    <p class="culture-crystal-description">Good enough is never enough. We pursue perfection in every pixel.</p>
                </div>

                <div class="culture-crystal scroll-reveal" data-cursor="pointer">
                    <div class="culture-icon">ðŸ”¥</div>
                    <h3 class="culture-crystal-title">PASSION</h3>
                    <p class="culture-crystal-description">We don't just make games, we live them. Passion drives everything.</p>
                </div>

                <div class="culture-crystal scroll-reveal" data-cursor="pointer">
                    <div class="culture-icon">ðŸŒŸ</div>
                    <h3 class="culture-crystal-title">COLLABORATION</h3>
                    <p class="culture-crystal-description">Great ideas come from everywhere. We build together.</p>
                </div>

                <div class="culture-crystal scroll-reveal" data-cursor="pointer">
                    <div class="culture-icon">ðŸŽ®</div>
                    <h3 class="culture-crystal-title">PLAYER-FIRST</h3>
                    <p class="culture-crystal-description">Every decision starts with one question: Is this amazing for players?</p>
                </div>

                <div class="culture-crystal scroll-reveal" data-cursor="pointer">
                    <div class="culture-icon">âˆž</div>
                    <h3 class="culture-crystal-title">LIMITLESS</h3>
                    <p class="culture-crystal-description">There are no limits to what we can achieve. Dream bigger.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="join-section">
        <div class="join-container">
            <h2 class="join-title holographic scroll-reveal">JOIN THE REVOLUTION</h2>
            <p class="join-description scroll-reveal">Think you have what it takes to redefine gaming? We're always looking for extraordinary talent to join our mission.</p>
            <div class="join-action scroll-reveal">
                <QuantumButton href="#" text="BECOME A VISIONARY" />
            </div>
        </div>
    </section>

    <Footer />
    <DataStream items={streamItems} />

    <style>
    .subtle-grid {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
            linear-gradient(rgba(255, 255, 255, 0.01) 1px, transparent 1px),
            linear-gradient(90deg, rgba(255, 255, 255, 0.01) 1px, transparent 1px);
        background-size: 100px 100px;
        animation: gridMove 30s linear infinite;
        z-index: -1;
        pointer-events: none;
    }

    @keyframes gridMove {
        0% { transform: translate(0, 0); }
        100% { transform: translate(100px, 100px); }
    }

    .staff-cosmos {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        background: 
            radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.03) 0%, transparent 50%),
            radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.05) 0%, transparent 50%),
            radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.02) 0%, transparent 60%),
            var(--primary-black);
        overflow: hidden;
        padding: 140px 0 100px;
    }

    .staff-hero-content {
        max-width: 1800px;
        margin: 0 auto;
        padding: 0 80px;
        text-align: center;
        z-index: 2;
        position: relative;
    }

    .staff-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: clamp(4rem, 12vw, 8rem);
        font-weight: 900;
        margin-bottom: 40px;
        letter-spacing: 8px;
        text-transform: uppercase;
        background: var(--gradient-bw);
        background-size: 400% 400%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: staffTitleShift 6s ease-in-out infinite;
        position: relative;
    }

    @keyframes staffTitleShift {
        0%, 100% { background-position: 0% 50%; }
        25% { background-position: 100% 0%; }
        50% { background-position: 100% 100%; }
        75% { background-position: 0% 100%; }
    }

    .staff-title::after {
        content: '';
        position: absolute;
        bottom: -20px;
        left: 50%;
        transform: translateX(-50%);
        width: 300px;
        height: 4px;
        background: var(--gradient-bw);
        animation: titleLineExpand 4s ease-in-out infinite;
    }

    @keyframes titleLineExpand {
        0%, 100% { width: 300px; opacity: 0.5; }
        50% { width: 500px; opacity: 1; }
    }

    .staff-subtitle {
        font-size: var(--font-scale-xl);
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 80px;
        max-width: 1000px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.8;
    }

    .leadership-section {
        padding: 200px 0;
        background: linear-gradient(135deg, 
            rgba(255, 255, 255, 0.02) 0%, 
            rgba(255, 255, 255, 0.01) 100%);
        position: relative;
    }

    .leadership-container {
        max-width: 1800px;
        margin: 0 auto;
        padding: 0 80px;
        position: relative;
        z-index: 2;
    }

    .section-header {
        text-align: center;
        margin-bottom: 100px;
    }

    .section-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-4xl);
        font-weight: 900;
        margin-bottom: 30px;
        letter-spacing: 4px;
        text-transform: uppercase;
    }

    .holographic {
        background: var(--gradient-bw);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: holographicShimmer 4s ease-in-out infinite;
    }

    @keyframes holographicShimmer {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .section-subtitle {
        font-size: var(--font-scale-lg);
        color: rgba(255, 255, 255, 0.8);
    }

    .leader-showcase {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 150px;
        align-items: center;
        margin-bottom: 150px;
    }

    .leader-avatar-container {
        position: relative;
        perspective: 1000px;
    }

    .leader-avatar-frame {
        position: relative;
        width: 400px;
        height: 400px;
        margin: 0 auto;
        border-radius: 50%;
        background: var(--gradient-glass);
        backdrop-filter: blur(25px);
        border: 3px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
        transition: all 1s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        cursor: pointer;
    }

    .leader-avatar-frame:hover {
        transform: rotateY(15deg) rotateX(5deg) scale(1.05);
        border-color: var(--primary-white);
        box-shadow: var(--shadow-white);
    }

    .leader-avatar-frame img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.8s ease;
    }

    .leader-avatar-frame:hover img {
        transform: scale(1.1);
    }

    .leader-avatar-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, 
            transparent 30%, 
            rgba(255, 255, 255, 0.1) 50%, 
            transparent 70%);
        transform: translateX(-100%) skewX(-15deg);
        transition: transform 1s ease;
    }

    .leader-avatar-frame:hover .leader-avatar-overlay {
        transform: translateX(100%) skewX(-15deg);
    }

    .leader-orbital-rings {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .orbital-ring {
        position: absolute;
        border: 2px solid transparent;
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation: orbitalRotation 10s linear infinite;
    }

    .orbital-ring:nth-child(1) {
        width: 120%;
        height: 120%;
        border-top: 2px solid var(--primary-white);
        border-right: 2px solid var(--medium-grey);
        animation-duration: 8s;
    }

    .orbital-ring:nth-child(2) {
        width: 140%;
        height: 140%;
        border-bottom: 2px solid var(--light-grey);
        border-left: 2px solid var(--primary-white);
        animation-duration: 12s;
        animation-direction: reverse;
    }

    .orbital-ring:nth-child(3) {
        width: 160%;
        height: 160%;
        border: 1px solid rgba(255, 255, 255, 0.2);
        animation-duration: 15s;
    }

    @keyframes orbitalRotation {
        0% { transform: translate(-50%, -50%) rotate(0deg); }
        100% { transform: translate(-50%, -50%) rotate(360deg); }
    }

    .leader-energy-field {
        position: absolute;
        top: -50%;
        left: -50%;
        right: -50%;
        bottom: -50%;
        background: radial-gradient(circle, 
            rgba(255, 255, 255, 0.03) 0%, 
            transparent 70%);
        opacity: 0;
        transition: opacity 1s ease;
        pointer-events: none;
        animation: energyPulse 4s ease-in-out infinite;
    }

    @keyframes energyPulse {
        0%, 100% { opacity: 0.3; transform: scale(1); }
        50% { opacity: 0.6; transform: scale(1.1); }
    }

    .leader-avatar-frame:hover .leader-energy-field {
        opacity: 1;
    }

    .leader-info-panel {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .leader-badge {
        display: inline-block;
        padding: 15px 35px;
        background: var(--gradient-glass);
        backdrop-filter: blur(20px);
        border: 2px solid var(--medium-grey);
        border-radius: 30px;
        margin-bottom: 40px;
        align-self: flex-start;
        position: relative;
        overflow: hidden;
    }

    .leader-badge span {
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-sm);
        font-weight: 700;
        letter-spacing: 3px;
        color: var(--medium-grey);
        text-transform: uppercase;
    }

    .leader-name {
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-4xl);
        font-weight: 900;
        margin-bottom: 20px;
        letter-spacing: 4px;
        background: var(--gradient-bw);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: leaderNameShimmer 5s ease-in-out infinite;
        text-transform: uppercase;
        line-height: 1.1;
    }

    @keyframes leaderNameShimmer {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .leader-title {
        font-size: var(--font-scale-lg);
        color: var(--primary-white);
        text-transform: uppercase;
        letter-spacing: 4px;
        margin-bottom: 40px;
        font-weight: 700;
    }

    .leader-description {
        font-size: var(--font-scale-lg);
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.8;
        margin-bottom: 50px;
    }

    .leader-achievements {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        margin-bottom: 50px;
    }

    .achievement-crystal {
        background: var(--gradient-glass);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 30px 20px;
        text-align: center;
        transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
    }

    .achievement-crystal:hover {
        transform: translateY(-10px) scale(1.05);
        border-color: var(--primary-white);
        box-shadow: var(--shadow-white);
    }

    .achievement-number {
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-xl);
        font-weight: 900;
        display: block;
        margin-bottom: 8px;
        background: var(--gradient-bw);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: achievementShimmer 3s ease-in-out infinite;
    }

    @keyframes achievementShimmer {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .achievement-label {
        font-size: var(--font-scale-sm);
        color: rgba(255, 255, 255, 0.8);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    .leader-social {
        display: flex;
        gap: 25px;
    }

    .social-crystal {
        width: 60px;
        height: 60px;
        backdrop-filter: blur(20px);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        text-decoration: none;
        position: relative;
