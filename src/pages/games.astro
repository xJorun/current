---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import WhitePetals from '../components/WhitePetals.astro';
import Cursor from '../components/Cursor.astro';
import Footer from '../components/Footer.astro';
import DataStream from '../components/DataStream.astro';
import QuantumButton from '../components/QuantumButton.astro';

const streamItems = [
    'TEAM: Legendary visionaries working across infinite dimensions',
    'CULTURE: Innovation, Excellence, Passion, Collaboration',
    'MISSION: Redefining the boundaries of digital reality',
    'STATUS: Continuously pushing the impossible to inevitable'
];
---

<BaseLayout title="Games - Current Studios Experience" description="Explore our revolutionary gaming experiences. From Basketball Zero to upcoming titles, discover what makes Current Studios games legendary.">
    <Cursor />
    <Navigation currentPage="games" />
    <WhitePetals />
    <div class="subtle-grid"></div>

    <section class="games-cosmos">
        <div class="games-hero-content">
            <h1 class="games-title">GAMING LIBRARY</h1>
            <p class="games-subtitle">Experience revolutionary games that push the boundaries of what's possible in Roblox</p>
            <div class="games-stats">
                <div class="game-stat">
                    <span class="game-stat-number" id="total-game-visits">0</span>
                    <span class="game-stat-label">Total Visits</span>
                </div>
                <div class="game-stat">
                    <span class="game-stat-number">3</span>
                    <span class="game-stat-label">Active Games</span>
                </div>
                <div class="game-stat">
                    <span class="game-stat-number" id="total-players">0</span>
                    <span class="game-stat-label">Players Online</span>
                </div>
                <div class="game-stat">
                    <span class="game-stat-number">98.9%</span>
                    <span class="game-stat-label">Rating</span>
                </div>
            </div>
        </div>
    </section>

    <section class="games-showcase">
        <div class="showcase-container">
            <div class="showcase-header">
                <h2 class="showcase-title holographic">FEATURED EXPERIENCES</h2>
                <p class="showcase-subtitle">Revolutionary games that redefine the gaming landscape</p>
            </div>
            
            <div class="games-collection">
                <div class="featured-game-section">
                    <div class="game-showcase-card scroll-reveal">
                        <div class="game-media-container">
                            <img src="https://res.cloudinary.com/dcyvxzhnl/image/upload/v1748311393/BBZStarReworkIcon_zhg12k.png" alt="Basketball Zero">
                            <div class="game-overlay"></div>
                        </div>
                    </div>
                    
                    <div class="game-info-panel scroll-reveal-right">
                        <div class="game-info-badge">
                            <span>FEATURED GAME</span>
                        </div>
                        <h2 class="game-info-title">DOMINATE THE COURT</h2>
                        <p class="game-info-description">Basketball Zero isn't just a game - it's a revolution. Experience the most realistic basketball gameplay on Roblox with advanced physics, skill-based mechanics, and intense competition.</p>
                        <div class="game-info-metrics">
                            <div class="info-metric">
                                <span class="info-metric-number" id="bz-daily-players">0</span>
                                <span class="info-metric-label">Daily Players</span>
                            </div>
                            <div class="info-metric">
                                <span class="info-metric-number" id="bz-matches-today">0</span>
                                <span class="info-metric-label">Matches Today</span>
                            </div>
                        </div>
                        <div class="game-info-action">
                            <QuantumButton href="#" text="ENTER THE ZONE" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="coming-games">
        <div class="coming-container">
            <div class="section-header">
                <h2 class="section-title holographic">EXPANDING LIBRARY</h2>
                <p class="section-subtitle">Next-generation experiences currently in development</p>
            </div>
            
            <div class="coming-games-grid">
                <div class="coming-game-card volleyball scroll-reveal">
                    <div class="game-status-badge coming-soon">COMING SOON</div>
                    <div class="game-video-bg">
                        <video autoplay muted loop>
                            <source src="https://res.cloudinary.com/dcyvxzhnl/video/upload/v1748192729/VOLLEYBALL_ZERO___Announcement_Trailer_dkebyo.mp4" type="video/mp4">
                        </video>
                    </div>
                    <div class="game-video-overlay"></div>
                    <div class="video-play-overlay">
                        <div class="video-play-btn">
                            <svg viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                        </div>
                    </div>
                    <div class="coming-game-content">
                        <h3 class="game-title">VOLLEYBALL ZERO</h3>
                        <p class="game-description">Experience the thrill of volleyball with realistic physics, strategic gameplay, and intense multiplayer matches.</p>
                        <div class="game-stats-grid">
                            <div class="game-stat">
                                <span class="game-stat-number" id="vb-waitlist">0</span>
                                <span class="game-stat-label">Awaiting Launch</span>
                            </div>
                            <div class="game-stat">
                                <span class="game-stat-number">Q2 2025</span>
                                <span class="game-stat-label">Expected</span>
                            </div>
                        </div>
                        <div class="game-actions">
                            <a href="#" class="game-action-btn primary">JOIN WAITLIST</a>
                            <a href="#" class="game-action-btn">WATCH TRAILER</a>
                        </div>
                    </div>
                </div>

                <div class="coming-game-card mugen scroll-reveal">
                    <div class="game-status-badge in-development">IN DEVELOPMENT</div>
                    <div class="game-image-bg">
                        <img src="https://res.cloudinary.com/dcyvxzhnl/image/upload/v1748194172/image_2025-05-25_132930506_fbtpxv.png" alt="Mugen">
                    </div>
                    <div class="game-video-overlay"></div>
                    <div class="coming-game-content">
                        <h3 class="game-title">MUGEN</h3>
                        <p class="game-description">Master ancient breathing techniques and unlock your demon slayer potential in this epic adventure.</p>
                        <div class="game-stats-grid">
                            <div class="game-stat">
                                <span class="game-stat-number">âˆž</span>
                                <span class="game-stat-label">Possibilities</span>
                            </div>
                            <div class="game-stat">
                                <span class="game-stat-number">2025</span>
                                <span class="game-stat-label">Launch Year</span>
                            </div>
                        </div>
                        <div class="game-actions">
                            <a href="#" class="game-action-btn primary">LEARN MORE</a>
                            <a href="#" class="game-action-btn">FOLLOW UPDATES</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="contact-section">
        <div class="contact-container">
            <h2 class="contact-title holographic">JOIN THE GAMING EXPERIENCE</h2>
            <p class="contact-subtitle">Connect with thousands of players and stay updated on our latest releases</p>
            <div class="contact-portals">
                <a href="#" class="contact-portal discord">
                    <div class="portal-icon">
                        <svg viewBox="0 0 24 24"><path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.193.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/></svg>
                    </div>
                    <span>Game Updates</span>
                    <div class="portal-energy"></div>
                </a>
                <a href="#" class="contact-portal youtube">
                    <div class="portal-icon">
                        <svg viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
                    </div>
                    <span>Chrollo's Channel</span>
                    <div class="portal-energy"></div>
                </a>
                <a href="https://x.com/currentgamesrbx" class="contact-portal twitter" target="_blank">
                    <div class="portal-icon">
                        <svg viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.80l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                    </div>
                    <span>Latest News</span>
                    <div class="portal-energy"></div>
                </a>
            </div>
        </div>
    </section>
    
    <Footer />
    <DataStream items={streamItems} />

    <style>
    .subtle-grid {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
            linear-gradient(rgba(255, 255, 255, 0.01) 1px, transparent 1px),
            linear-gradient(90deg, rgba(255, 255, 255, 0.01) 1px, transparent 1px);
        background-size: 100px 100px;
        animation: gridMove 30s linear infinite;
        z-index: -1;
        pointer-events: none;
    }

    @keyframes gridMove {
        0% { transform: translate(0, 0); }
        100% { transform: translate(100px, 100px); }
    }

    .games-cosmos {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        background: 
            radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.03) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.05) 0%, transparent 50%),
            radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.02) 0%, transparent 60%),
            var(--primary-black);
        overflow: hidden;
        padding: 140px 0 100px;
    }

    .games-hero-content {
        max-width: 1800px;
        margin: 0 auto;
        padding: 0 80px;
        text-align: center;
        z-index: 2;
        position: relative;
    }

    .games-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: clamp(4rem, 12vw, 8rem);
        font-weight: 900;
        margin-bottom: 40px;
        letter-spacing: 6px;
        text-transform: uppercase;
        background: var(--gradient-bw);
        background-size: 400% 400%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gamesTitleShift 6s ease-in-out infinite;
    }

    @keyframes gamesTitleShift {
        0%, 100% { background-position: 0% 50%; }
        25% { background-position: 100% 0%; }
        50% { background-position: 100% 100%; }
        75% { background-position: 0% 100%; }
    }

    .games-subtitle {
        font-size: var(--font-scale-xl);
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 60px;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.7;
    }

    .games-stats {
        display: flex;
        justify-content: center;
        gap: 80px;
        margin-bottom: 80px;
    }

    .game-stat {
        text-align: center;
        background: var(--gradient-glass);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 30px 25px;
        transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        min-width: 200px;
    }

    .game-stat:hover {
        transform: translateY(-10px) scale(1.05);
        border-color: var(--primary-white);
        box-shadow: var(--shadow-white);
    }

    .game-stat-number {
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-2xl);
        font-weight: 900;
        display: block;
        margin-bottom: 10px;
        background: var(--gradient-bw);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: statShimmer 3s ease-in-out infinite;
    }

    @keyframes statShimmer {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .game-stat-label {
        font-size: var(--font-scale-sm);
        color: rgba(255, 255, 255, 0.8);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 600;
    }

    .games-showcase {
        padding: 150px 0;
        background: linear-gradient(180deg, 
            transparent 0%, 
            rgba(255, 255, 255, 0.01) 50%, 
            transparent 100%);
        position: relative;
    }

    .showcase-container {
        max-width: 1800px;
        margin: 0 auto;
        padding: 0 80px;
        position: relative;
        z-index: 2;
    }

    .showcase-header {
        text-align: center;
        margin-bottom: 120px;
    }

    .showcase-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-4xl);
        font-weight: 900;
        margin-bottom: 30px;
        letter-spacing: 4px;
        text-transform: uppercase;
    }

    .holographic {
        background: var(--gradient-bw);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: holographicShimmer 4s ease-in-out infinite;
    }

    @keyframes holographicShimmer {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .showcase-subtitle {
        font-size: var(--font-scale-lg);
        color: rgba(255, 255, 255, 0.8);
    }

    .games-collection {
        display: grid;
        gap: 100px;
    }

    .featured-game-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 120px;
        align-items: center;
        margin-bottom: 150px;
    }

    .game-showcase-card {
        background: var(--gradient-glass);
        backdrop-filter: blur(25px);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 30px;
        overflow: hidden;
        position: relative;
        transition: all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        height: 700px;
        perspective: 1000px;
    }

    .game-showcase-card:hover {
        transform: rotateY(-10deg) rotateX(5deg) scale(1.02);
        border-color: var(--primary-white);
        box-shadow: var(--shadow-white);
    }

    .game-media-container {
        position: relative;
        height: 100%;
        overflow: hidden;
    }

    .game-media-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.8s ease;
    }

    .game-showcase-card:hover .game-media-container img {
        transform: scale(1.1);
    }

    .game-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, 
            transparent 30%, 
            rgba(255, 255, 255, 0.1) 50%, 
            transparent 70%);
        transform: translateX(-100%) skewX(-15deg);
        transition: transform 0.8s ease;
    }

    .game-showcase-card:hover .game-overlay {
        transform: translateX(100%) skewX(-15deg);
    }

    .game-info-panel {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .game-info-badge {
        display: inline-block;
        padding: 12px 30px;
        background: var(--gradient-glass);
        backdrop-filter: blur(15px);
        border: 1px solid var(--primary-white);
        border-radius: 25px;
        margin-bottom: 30px;
        align-self: flex-start;
        position: relative;
        overflow: hidden;
    }

    .game-info-badge span {
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-sm);
        font-weight: 700;
        letter-spacing: 2px;
        color: var(--primary-white);
        text-transform: uppercase;
    }

    .game-info-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-4xl);
        font-weight: 900;
        margin-bottom: 30px;
        letter-spacing: 3px;
        line-height: 1.1;
        background: var(--gradient-bw);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: infoTitleShimmer 5s ease-in-out infinite;
        text-transform: uppercase;
    }

    @keyframes infoTitleShimmer {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .game-info-description {
        font-size: var(--font-scale-lg);
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.8;
        margin-bottom: 40px;
    }

    .game-info-metrics {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 30px;
        margin-bottom: 40px;
    }

    .info-metric {
        text-align: center;
        padding: 25px 20px;
        background: var(--gradient-glass);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

    .info-metric:hover {
        transform: translateY(-5px) scale(1.05);
        border-color: var(--primary-white);
        box-shadow: var(--shadow-white);
    }

    .info-metric-number {
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-xl);
        font-weight: 900;
        display: block;
        margin-bottom: 8px;
        background: var(--gradient-bw);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: metricShimmer 3s ease-in-out infinite;
    }

    @keyframes metricShimmer {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .info-metric-label {
        font-size: var(--font-scale-sm);
        color: rgba(255, 255, 255, 0.7);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 600;
    }

    .game-info-action {
        align-self: flex-start;
    }

    .coming-games {
        padding: 150px 0;
        background: linear-gradient(135deg, 
            rgba(255, 255, 255, 0.01) 0%, 
            rgba(255, 255, 255, 0.02) 100%);
        position: relative;
    }

    .coming-container {
        max-width: 1800px;
        margin: 0 auto;
        padding: 0 80px;
        position: relative;
        z-index: 2;
    }

    .section-header {
        text-align: center;
        margin-bottom: 120px;
    }

    .section-title {
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-4xl);
        font-weight: 900;
        margin-bottom: 30px;
        letter-spacing: 4px;
        text-transform: uppercase;
    }

    .section-subtitle {
        font-size: var(--font-scale-lg);
        color: rgba(255, 255, 255, 0.8);
    }

    .coming-games-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(600px, 1fr));
        gap: 80px;
    }

    .coming-game-card {
        background: var(--gradient-glass);
        backdrop-filter: blur(25px);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 30px;
        overflow: hidden;
        position: relative;
        transition: all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        height: 600px;
        perspective: 1000px;
    }

    .coming-game-card:hover {
        transform: translateY(-20px) rotateX(5deg) rotateY(5deg) scale(1.02);
        border-color: var(--primary-white);
        box-shadow: var(--shadow-white);
    }

    .game-status-badge {
        position: absolute;
        top: 20px;
        left: 20px;
        padding: 12px 25px;
        background: var(--primary-white);
        color: var(--primary-black);
        font-family: 'JetBrains Mono', monospace;
        font-size: var(--font-scale-xs);
        font-weight: 700;
        letter-spacing: 2px;
        border-radius: 25px;
        text-transform: uppercase;
        animation: badgePulse 2s ease-in-out infinite;
        z-index: 10;
    }

    @keyframes badgePulse {
        0%, 100% { transform: scale(1); box-shadow: 0 0 0 rgba(255, 255, 255, 0.4); }
        50% { transform: scale(1.05); box-shadow: 0 0 20px rgba(255, 255, 255, 0.8); }
    }

    .game-status-badge.coming-soon {
        background: var(--medium-grey);
        color: var(--primary-white);
    }

    .game-status-badge.in-development {
        background: var(--light-grey);
        color: var(--primary-black);
    }

    .game-video-bg,
    .game-image-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .game-video-bg video,
    .game-image-bg img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.8s ease;
    }

    .coming-game-card:hover .game-video-bg video,
    .coming-game-card:hover .game-image-bg img {
        transform: scale(1.05);
    }

    .game-video-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(transparent 0%, rgba(0, 0, 0, 0.8) 70%);
        z-index: 2;
    }

    .video-play-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 5;
        opacity: 0;
        transition: all 0.4s ease;
    }

    .coming-game-card:hover .video-play-overlay {
        opacity: 1;
    }

    .video-play-btn {
        width: 100px;
        height: 100px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 50%;
        display: flex;
        align-items: center;
