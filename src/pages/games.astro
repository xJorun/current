    <script>
    const gameStats = {
        totalGameVisits: document.getElementById('total-game-visits'),
        totalPlayers: document.getElementById('total-players'),
        bzDailyPlayers: document.getElementById('bz-daily-players'),
        bzMatchesToday: document.getElementById('bz-matches-today'),
        vbWaitlist: document.getElementById('vb-waitlist')
    };

    const realStats = {
        basketballZero: {
            totalVisits: 274489545,
            currentPlayers: 65039,
            dailyPlayers: 450000,
            matchesToday: 125000
        },
        volleyballZero: {
            waitlist: 21177
        },
        totalPlayers: 65039
    };

    const updateGameStats = () => {
        const bzVisitsVariation = Math.floor(Math.random() * 12000) + 6000;
        const bzPlayersVariation = Math.floor(Math.random() * 1200) - 600;
        const vbWaitlistVariation = Math.floor(Math.random() * 250) + 75;

        realStats.basketballZero.totalVisits += bzVisitsVariation;
        realStats.basketballZero.currentPlayers = Math.max(0, realStats.basketballZero.currentPlayers + bzPlayersVariation);
        realStats.volleyballZero.waitlist += vbWaitlistVariation;
        realStats.totalPlayers = realStats.basketballZero.currentPlayers;

        Object.keys(gameStats).forEach(key => {
            const element = gameStats[key];
            if (element) {
                let value;
                switch(key) {
                    case 'totalGameVisits':
                        value = realStats.basketballZero.totalVisits;
                        break;
                    case 'totalPlayers':
                        value = realStats.basketballZero.currentPlayers;
                        break;
                    case 'bzDailyPlayers':
                        value = realStats.basketballZero.dailyPlayers;
                        break;
                    case 'bzMatchesToday':
                        value = realStats.basketballZero.matchesToday;
                        break;
                    case 'vbWaitlist':
                        value = realStats.volleyballZero.waitlist;
                        break;
                }
                if (value !== undefined) {
                    animateCounter(element, value);
                }
            }
        });
    };

    const animateCounter = (element, targetValue, duration = 2500) => {
        const startValue = parseInt(element.textContent.replace(/[^0-9]/g, '')) || 0;
        const startTime = Date.now();
        
        const animate = () => {
            const elapsed = Date.now() - startTime;
            const progress = Math.min(elapsed / duration, 1);
            
            const easeOutQuart = 1 - Math.pow(1 - progress, 4);
            const currentValue = Math.floor(startValue + (targetValue - startValue) * easeOutQuart);
            
            element.textContent = formatNumber(currentValue);
            
            if (progress < 1) {
                requestAnimationFrame(animate);
            }
        };
        
        animate();
    };

    const formatNumber = (num) => {
        if (num >= 1000000000) {
            return (num / 1000000000).toFixed(1) + 'B';
        } else if (num >= 1000000) {
            return (num / 1000000).toFixed(1) + 'M';
        } else if (num >= 1000) {
            return (num / 1000).toFixed(1) + 'K';
        }
        return num.toLocaleString();
    };

    const videoPlayButtons = document.querySelectorAll('.video-play-btn');
    videoPlayButtons.forEach(button => {
        button.addEventListener('click', () => {
            const card = button.closest('.coming-game-card');
            const video = card.querySelector('video');
            
            if (video) {
                if (video.paused) {
                    video.play();
                    button.style.opacity = '0';
                } else {
                    video.pause();
                    button.style.opacity = '1';
                }
            }
        });
    });

    window.addEventListener('scroll', () => {
        const nav = document.getElementById('main-nav');
        if (window.scrollY > 100) {
            nav.classList.add('scrolled');
        } else {
            nav.classList.remove('scrolled');
        }
    });

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('revealed');
            }
        });
    }, { threshold: 0.15 });

    document.querySelectorAll('.scroll-reveal, .scroll-reveal-right').forEach(el => observer.observe(el));

    setTimeout(updateGameStats, 1000);
    setInterval(updateGameStats, 15000);
    </script>
