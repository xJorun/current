            </a>
        </div>
    </div>
    <div class="nav-scanner"></div>
</nav>

<style>
.ultimate-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 25px 0;
    background: rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(20px) saturate(200%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.ultimate-nav.scrolled {
    padding: 15px 0;
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(30px) saturate(300%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: var(--shadow-intense);
}

.nav-container {
    max-width: 1800px;
    margin: 0 auto;
    padding: 0 80px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-logo {
    display: flex;
    align-items: center;
    gap: 20px;
    text-decoration: none;
    transition: all 0.4s ease;
}

.nav-logo:hover {
    transform: scale(1.05);
}

.nav-logo img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    transition: all 0.4s ease;
    box-shadow: var(--shadow-subtle);
}

.nav-logo:hover img {
    transform: rotate(360deg) scale(1.1);
    box-shadow: var(--shadow-white);
}

.logo-text {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--font-scale-xl);
    font-weight: 900;
    letter-spacing: 4px;
    background: linear-gradient(45deg, #ffffff, #ffffff, #f8f8f8, #ffffff);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: logoShimmer 3s ease-in-out infinite;
}

.nav-links {
    display: flex;
    gap: 60px;
    align-items: center;
}

.nav-link {
    position: relative;
    color: #ffffff;
    text-decoration: none;
    font-weight: 600;
    font-size: var(--font-scale-md);
    letter-spacing: 2px;
    padding: 15px 0;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    overflow: hidden;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 3px;
    background: linear-gradient(45deg, #ffffff, #ffffff, #f8f8f8, #ffffff);
    transition: width 0.4s ease;
}

.nav-link:hover::after,
.nav-link.active::after {
    width: 100%;
}

.staff-link {
    border: 2px solid rgba(255, 255, 255, 0.3);
    padding: 12px 25px;
    border-radius: 50px;
    background: var(--gradient-glass);
    backdrop-filter: blur(10px);
    transition: all 0.4s ease;
}

.staff-link:hover {
    border-color: var(--primary-white);
    background: rgba(255, 255, 255, 0.1);
    box-shadow: var(--shadow-white);
    transform: translateY(-3px);
}

.nav-social {
    display: flex;
    gap: 20px;
}

.social-link {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
    text-decoration: none;
    position: relative;
    overflow: hidden;
}

.social-link svg {
    width: 20px;
    height: 20px;
    transition: all 0.4s ease;
}

.social-link.discord {
    background: linear-gradient(135deg, var(--accent-blue), rgba(88, 101, 242, 0.8));
}

.social-link.discord svg {
    fill: white;
}

.social-link.youtube {
    background: linear-gradient(135deg, var(--accent-red), rgba(255, 0, 0, 0.8));
}

.social-link.youtube svg {
    fill: white;
}

.social-link.twitter {
    background: linear-gradient(135deg, var(--accent-twitter), rgba(29, 161, 242, 0.8));
}

.social-link.twitter svg {
    fill: white;
}

.social-link:hover {
    transform: translateY(-5px) scale(1.1);
    box-shadow: var(--shadow-white);
}

.nav-scanner {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--gradient-bw);
    transform: translateX(-100%);
    animation: navScan 4s ease-in-out infinite;
}

@keyframes navScan {
    0%, 100% { transform: translateX(-100%); }
    50% { transform: translateX(100%); }
}

@keyframes logoShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

@media (max-width: 768px) {
    .nav-container {
        padding: 0 30px;
    }
    
    .nav-links {
        display: none;
    }
    
    .nav-social {
        gap: 15px;
    }
}
</style>