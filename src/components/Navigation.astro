---
export interface Props {
  currentPage: 'home' | 'games' | 'blog' | 'team';
}

const { currentPage } = Astro.props;
---

<nav class="ultimate-nav" id="main-nav">
    <div class="nav-container">
        <div class="nav-logo">
            <img src="https://res.cloudinary.com/dcyvxzhnl/image/upload/v1748140545/2f1AS1Ju_400x400_takhfx.jpg" alt="Current Studios">
            <span class="logo-text">CURRENT</span>
        </div>
        <div class="nav-links">
            <a href="/" class={`nav-link ${currentPage === 'home' ? 'active' : ''}`} data-text="HOME">HOME</a>
            <a href="/games" class={`nav-link ${currentPage === 'games' ? 'active' : ''}`} data-text="GAMES">GAMES</a>
            <a href="/blog" class={`nav-link ${currentPage === 'blog' ? 'active' : ''}`} data-text="BLOG">BLOG</a>
            <a href="/#about" class="nav-link" data-text="ABOUT">ABOUT</a>
            <a href="/team" class={`nav-link staff-link ${currentPage === 'team' ? 'active' : ''}`} data-text="TEAM">TEAM</a>
        </div>
        <div class="nav-social">
