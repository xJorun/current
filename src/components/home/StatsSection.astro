<style>
.gaming-stats {
    padding: 150px 0;
    background: linear-gradient(180deg, 
        transparent 0%, 
        rgba(255, 255, 255, 0.005) 50%, 
        transparent 100%);
    position: relative;
}

.gaming-stats::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 50%, 
        rgba(255, 255, 255, 0.01) 0%, 
        transparent 70%);
    pointer-events: none;
}

.stats-container {
    max-width: 1800px;
    margin: 0 auto;
    padding: 0 80px;
    position: relative;
    z-index: 2;
}

.stats-header {
    text-align: center;
    margin-bottom: 100px;
}

.section-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--font-scale-4xl);
    font-weight: 900;
    margin-bottom: 30px;
    letter-spacing: 4px;
    text-transform: uppercase;
}

.holographic {
    background: linear-gradient(45deg, 
        #ffffff 0%, 
        #f8f8f8 25%, 
        #e8e8e8 50%, 
        #ffffff 75%, 
        #f8f8f8 100%);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: holographicShift 5s ease-in-out infinite;
}

.section-subtitle {
    font-size: var(--font-scale-lg);
    color: #ffffff;
    max-width: 600px;
    margin: 0 auto;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 50px;
}

.stat-crystal {
    position: relative;
    perspective: 1000px;
    cursor: pointer;
}

.crystal-core {
    background: var(--gradient-glass);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 25px;
    padding: 50px 40px;
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    transform-style: preserve-3d;
}

.stat-crystal:hover .crystal-core {
    transform: rotateY(15deg) rotateX(5deg) translateZ(30px);
    border-color: var(--primary-white);
    box-shadow: var(--shadow-subtle);
}

.crystal-glow {
    position: absolute;
    top: -20%;
    left: -20%;
    right: -20%;
    bottom: -20%;
    background: radial-gradient(circle, 
        rgba(255, 255, 255, 0.015) 0%, 
        transparent 70%);
    opacity: 0;
    transition: opacity 0.6s ease;
    pointer-events: none;
}

.stat-crystal:hover .crystal-glow {
    opacity: 1;
}

.stat-icon {
    font-size: var(--font-scale-3xl);
    margin-bottom: 25px;
    transition: all 0.6s ease;
}

.stat-crystal:hover .stat-icon {
    transform: scale(1.2) rotateY(360deg);
}

.stat-value {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--font-scale-3xl);
    font-weight: 900;
    margin-bottom: 15px;
    background: linear-gradient(45deg, #ffffff, #ffffff, #f8f8f8, #ffffff);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: valueShimmer 4s ease-in-out infinite;
}

.stat-label {
    font-size: var(--font-scale-md);
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 20px;
    font-weight: 600;
}

.stat-change {
    font-size: var(--font-scale-sm);
    color: #ffffff;
    font-family: 'JetBrains Mono', monospace;
    font-weight: 500;
}

@keyframes holographicShift {
    0%, 100% { background-position: 0% 50%; }
    25% { background-position: 100% 0%; }
    50% { background-position: 100% 100%; }
    75% { background-position: 0% 100%; }
}

@keyframes valueShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

@media (max-width: 768px) {
    .stats-container {
        padding: 0 30px;
    }
    
    .stats-grid {
        grid-template-columns: 1fr;
        gap: 30px;
    }
}
</style>