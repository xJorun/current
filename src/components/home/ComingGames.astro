<style>
.coming-games {
    padding: 150px 0;
    background: linear-gradient(180deg, 
        rgba(255, 255, 255, 0.005) 0%, 
        rgba(255, 255, 255, 0.01) 100%);
    position: relative;
}

.coming-games::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 70% 30%, 
        rgba(255, 255, 255, 0.01) 0%, 
        transparent 60%);
    pointer-events: none;
}

.coming-container {
    max-width: 1800px;
    margin: 0 auto;
    padding: 0 80px;
    position: relative;
    z-index: 2;
}

.section-header {
    text-align: center;
    margin-bottom: 100px;
}

.section-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--font-scale-4xl);
    font-weight: 900;
    margin-bottom: 30px;
    letter-spacing: 4px;
    text-transform: uppercase;
}

.holographic {
    background: linear-gradient(45deg, 
        #ffffff 0%, 
        #f8f8f8 25%, 
        #e8e8e8 50%, 
        #ffffff 75%, 
        #f8f8f8 100%);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: holographicShift 5s ease-in-out infinite;
}

.section-subtitle {
    font-size: var(--font-scale-lg);
    color: rgba(255, 255, 255, 0.8);
}

.games-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(600px, 1fr));
    gap: 60px;
}

.game-card {
    position: relative;
    background: var(--gradient-glass);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 30px;
    overflow: hidden;
    transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    cursor: pointer;
    height: 500px;
}

.game-card:hover {
    transform: translateY(-20px) scale(1.02);
    border-color: var(--primary-white);
    box-shadow: var(--shadow-subtle);
}

.card-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}

.card-bg video,
.card-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.8s ease;
}

.game-card:hover .card-bg video,
.game-card:hover .card-bg img {
    transform: scale(1.1);
}

.card-content {
    position: relative;
    z-index: 2;
    padding: 40px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    background: linear-gradient(transparent 0%, rgba(0, 0, 0, 0.8) 100%);
}

.card-status {
    display: inline-block;
    padding: 8px 20px;
    background: var(--medium-grey);
    color: var(--primary-black);
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--font-scale-xs);
    font-weight: 700;
    letter-spacing: 2px;
    border-radius: 20px;
    margin-bottom: 20px;
    align-self: flex-start;
    animation: statusPulse 2s ease-in-out infinite;
}

.card-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--font-scale-2xl);
    font-weight: 900;
    margin-bottom: 20px;
    letter-spacing: 2px;
    background: var(--gradient-bw);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: cardTitleShimmer 4s ease-in-out infinite;
}

.card-description {
    font-size: var(--font-scale-md);
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.7;
    margin-bottom: 30px;
}

.card-stats {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--font-scale-sm);
    color: var(--primary-white);
    font-weight: 600;
}

.card-glow {
    position: absolute;
    top: -20%;
    left: -20%;
    right: -20%;
    bottom: -20%;
    background: radial-gradient(circle, 
        rgba(255, 255, 255, 0.01) 0%, 
        transparent 70%);
    opacity: 0;
    transition: opacity 0.6s ease;
    pointer-events: none;
}

.game-card:hover .card-glow {
    opacity: 1;
}

@keyframes holographicShift {
    0%, 100% { background-position: 0% 50%; }
    25% { background-position: 100% 0%; }
    50% { background-position: 100% 100%; }
    75% { background-position: 0% 100%; }
}

@keyframes statusPulse {
    0%, 100% { transform: scale(1); box-shadow: 0 0 0 rgba(255, 255, 255, 0.4); }
    50% { transform: scale(1.05); box-shadow: 0 0 10px rgba(255, 255, 255, 0.4); }
}

@keyframes cardTitleShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

@media (max-width: 1200px) {
    .games-grid {
        grid-template-columns: 1fr;
        gap: 40px;
    }
}

@media (max-width: 768px) {
    .coming-container {
        padding: 0 30px;
    }
}
</style>