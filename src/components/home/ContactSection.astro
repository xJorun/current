<style>
.contact-section {
    padding: 150px 0;
    background: linear-gradient(135deg, 
        rgba(255, 255, 255, 0.005) 0%, 
        rgba(255, 255, 255, 0.01) 100%);
    position: relative;
}

.contact-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 70%, 
        rgba(255, 255, 255, 0.01) 0%, 
        transparent 60%);
    pointer-events: none;
}

.contact-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 80px;
    text-align: center;
    position: relative;
    z-index: 2;
}

.contact-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: var(--font-scale-4xl);
    font-weight: 900;
    margin-bottom: 30px;
    letter-spacing: 4px;
    text-transform: uppercase;
}

.holographic {
    background: linear-gradient(45deg, 
        #ffffff 0%, 
        #f8f8f8 25%, 
        #e8e8e8 50%, 
        #ffffff 75%, 
        #f8f8f8 100%);
    background-size: 400% 400%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: holographicShift 5s ease-in-out infinite;
}

.contact-subtitle {
    font-size: var(--font-scale-lg);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 80px;
}

.contact-portals {
    display: flex;
    justify-content: center;
    gap: 60px;
}

.contact-portal {
    position: relative;
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 25px 40px;
    backdrop-filter: blur(20px);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    color: var(--primary-white);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--font-scale-md);
    letter-spacing: 1px;
    overflow: hidden;
    transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.contact-portal.discord {
    background: linear-gradient(135deg, var(--accent-blue), rgba(88, 101, 242, 0.3));
}

.contact-portal.youtube {
    background: linear-gradient(135deg, var(--accent-red), rgba(255, 0, 0, 0.3));
}

.contact-portal.twitter {
    background: linear-gradient(135deg, var(--accent-twitter), rgba(29, 161, 242, 0.3));
}

.contact-portal:hover {
    transform: translateY(-10px) scale(1.05);
    box-shadow: var(--shadow-subtle);
    border-color: var(--primary-white);
}

.portal-icon {
    width: 30px;
    height: 30px;
    transition: all 0.4s ease;
}

.portal-icon svg {
    width: 100%;
    height: 100%;
    fill: var(--primary-white);
    transition: all 0.4s ease;
}

.contact-portal:hover .portal-icon {
    transform: rotateY(360deg) scale(1.2);
}

.contact-portal .portal-energy {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.4s ease;
}

.contact-portal:hover .portal-energy {
    width: 200px;
    height: 200px;
}

@keyframes holographicShift {
    0%, 100% { background-position: 0% 50%; }
    25% { background-position: 100% 0%; }
    50% { background-position: 100% 100%; }
    75% { background-position: 0% 100%; }
}

@media (max-width: 1200px) {
    .contact-portals {
        flex-direction: column;
        align-items: center;
        gap: 30px;
    }
}

@media (max-width: 768px) {
    .contact-container {
        padding: 0 30px;
    }
}
</style>